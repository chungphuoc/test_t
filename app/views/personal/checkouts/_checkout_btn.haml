- if current_user && current_user.customer? && @course.waiting?(current_user)
  = form_tag('/personal/checkouts/process',{method: :post}) do
    = hidden_field_tag :course_name, @course.name
    = hidden_field_tag :tuition, @course.tuition
    = hidden_field_tag :currency, @course.currency
    = hidden_field_tag :course_id, @course.id
    %script{src: "https://checkout.stripe.com/checkout.js",
            class: "stripe-button",
            'data-key'=> "#{Rails.configuration.stripe[:publishable_key]}",
            'data-amount'=> "#{@course.tuition * 100}",
            'data-email' => "#{current_user.email}",
            'data-currency' => 'USD'}