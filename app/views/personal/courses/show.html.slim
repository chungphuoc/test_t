  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close data-dismiss="modal" type="button"  Ã—
        h4.modal-title Class detail
      .modal-body id='model-body'
        p 
          b Start Date
        p #{@course.start_date}
        p
          b Start time
        p #{@course.start_time}
        p
          b End time
        p #{@course.end_time}
