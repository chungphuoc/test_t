  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close data-dismiss="modal" type="button"  Ã—
        h4.modal-title Class detail
      .modal-body id='model-body'
        .row
          .col-lg-3
            p 
              b Start Date
          .col-lg-6
            p #{@course.start_date}
        .row
          .col-lg-3
            p
              b Start time
          .col-lg-6
            p #{@course.start_time}
        .row
          .col-lg-3
            p
              b End time
          .col-lg-6
            p #{@course.end_time}
        .row
          .col-lg-3
            p
              b Price
          .col-lg-6
            p 
      .modal-footer
        p Do you want to add this class?
        = form_tag personal_enrollments_path, method: :post do
          = hidden_field_tag :course_id, @course.id
          = submit_tag "Add", class: "btn btn-primary"
          button.btn.btn-default data-dismiss="modal" type="button"  Cancel

h2 Class detail
table.table.table-stripped
  tr
    th Name
    td = @course.name
  tr
    th Phone
    td = @course.phone_number
  tr
    th Website
    td = @course.website
  tr
    th Description
    td = @course.description
  tr
    th Num slot
    td = @course.num_slot
  tr
    th Start date
    td = @course.start_date
  tr
    th Start time
    td = @course.start_time
  tr
    th End time
    td = @course.end_time
  tr
    th Teacher
    td = @course.teacher_name
  tr
    th Station
    td = @course.station_location
  tr
    th Exercise
    td = @course.exercise_name
  tr
    th Rating
    td = rating_for @course, "quality", disable_after_rate: false
  tr
    th Add to favourite
    td  
      = render "personal/favourite_classes/add_to_favourite_wrapper", course_id: @course.id, user: current_user
