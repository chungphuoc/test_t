.home-header-section
  = render "shares/home_header"
  #background-homepage
    - if @image
      = image_tag @image.url
    - else
      = image_tag 'yoga.jpg'
    #background-opacity
    .header-content
      h1 Get TONED
      h2 Youâ€™ve got what it takes
      -if current_user
        - if current_user.studio?
          = link_to manage_courses_path, class: "btn btn-sign-up btn-get-started"
            span = t('button.get_started')
        - elsif current_user.customer?
          = link_to personal_courses_path, class: "btn btn-sign-up btn-get-started"
            span = t('button.get_started')
        - else
          button.btn.btn-sign-up = t('button.get_started')
      - else
        = link_to new_user_registration_path, class: "btn btn-sign-up btn-get-started"
            span = t('button.get_started')
